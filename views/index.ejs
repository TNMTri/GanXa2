<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <% include ./partial/head %>
</head>
<body>
<header>
    <% include ./partial/header %>
</header>
<div class="container">
    <div class="row row-container">
        <% store_array.forEach(function(store){ %>
        <div class="row-home">
            <div class="thumbnail">
                <img class="img-store" src="<%= store.cover %>" alt=" ">
                <img class="img-logo" src="<%= store.logo %>">

                <center><a href="store_detail?id=<%= store._id %>"><h3><%= store.store_name %></h3></a></center>

                <p>
                    <% store.address.forEach(function (a) { %>
                    <%= a.street + ", " + a.district + ", " + a.city %>
                    <% }) %>
                </p>

                <p><a href="edit_store?id=<%= store._id %>" class="btn btn-primary btn-block">Edit store</a>

            </div>


        </div>
        <% }) %>
    </div>
</div>
<footer>
    <% include ./partial/footer %>
</footer>
</body>
</html>