<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <% include ./partial/head %>
</head>
<body>
<header>
    <% include ./partial/header %>
</header>
<div class="container">


    <div class="row row-container">
        <div class="col-md-11 col-xs-11 col-sm-11">
            <span class="label label-primary label-index col-md-12 col-xs-12 col-sm-12"><h1>New Store</h1></span>
        </div>
        <% store_array.forEach(function(store){ %>
        <div class="row-home">

            <div class="thumbnail">
                <img class="img-store" src="<%= store.cover %>" alt=" ">
                <img class="img-logo" src="<%= store.logo %>">
                <center><a href="store_detail?id=<%= store._id %>"><h4 class="h4_index"><%= store.store_name %></h4></a></center>
                <p class="p-index">
                    <% store.address.forEach(function (a) { %>
                    <%= (a.street + ", " + a.district + ", " + a.city).substring(0, 50) %>... <a href="store_detail?id=<%= store._id %>">xem thÃªm</a>
                    <% }) %>
                </p>
                <a href="edit_store?id=<%= store._id %>"  class="btn btn-primary btn-block btn_index">Edit store</a>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<footer>
    <% include ./partial/footer %>
</footer>
</body>
</html>