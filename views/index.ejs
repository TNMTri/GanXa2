<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home</title>
    <% include ./partial/head %>
</head>
<body>
<header>
    <% include ./partial/header %>
</header>
<div class="row row-home">
    <% store_array.forEach(function(store){ %>
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
            <a href="#" class="thumbnail">
                <img class="img-store" src="<%= store.cover %>" alt=" ">
            </a>

            <div class="caption">
                <center><h3><%= store.store_name %></h3></center>
                <p>
                    <% store.address.forEach(function (a) { %>
                    <%= a.address1 + ", " + a.district + ", " + a.city %>
                    <% }) %>
                </p>

                <p><a href="store_detail?id=<%= store._id %>" class="btn btn-primary btn-block">View Details</a>
                <p><a href="edit_store?id=<%= store._id %>" class="btn btn-primary btn-block">Edit store</a>
            </div>
        </div>
    </div>
    <% }) %>
</div>
</body>
</html>