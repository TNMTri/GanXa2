<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partial/head %>
</head>
<body>
<header>
    <% include ./partial/header %>
</header>
<div class="container">
    <div class="row">
        <center>
            <div class="col-md-12">
                <div class="row authors-list">
                    <form action="" method="post" enctype="multipart/form-data">
                        <div class="col-md-12 input_insertstore">
                            <input type="text" id="a" name="txtProductName" placeholder="Tên sản phẩm"
                                   class="form-control">
                        </div>
                        <div class="col-md-12 input_insertstore">
                            <input type="text" id="o" name="txtPrice" placeholder="Giá"
                                   class="form-control  ">
                        </div>

                        <div class="col-md-12">
                            <input type="text" required name="txtTags" placeholder="Tags"
                                   class="form-control  input_insertstore">
                        </div>



                        <div class="col-md-6 input_insertstore">
                            <!--Phần này cho description-->
                            <label class="col-md-1 control-label ">
                                Description
                            </label>
                            <div class="col-md-12 input_insertstore">
                                <textarea name="txtDescription" rows="6" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="col-md-6 input_insertstore">
                            <label class="col-md-1 control-label  ">
                                Media
                            </label>

                            <div class="col-md-12 input_insertstore">
                                <input type="text" placeholder="Media name" name="txtMediaName"
                                       class="form-control">
                            </div>
                            <label class="col-md-6 control-label" style="margin-top: 40px;">
                                Chọn thuộc tính bạn muốn
                            </label>

                            <div class="col-md-2 input_insertstore">

                                <input type="radio" name="grpType" value="Image" checked
                                       class="form-control input_insertstore"> Image
                            </div>
                            <div class="col-md-2 input_insertstore">

                                <input type="radio" name="grpType" value="Video"
                                       class="form-control  "> Video
                            </div>
                            <div class="col-md-12">

                            </div>
                            <div class="col-md-5 input_insertstore">
                                <input type="text" required name="txtMediaUrl" placeholder="Media url"
                                       class="form-control input_insertstore">
                            </div>
                            <label class="col-md-2 control-label input_insertstore">
                                Or
                            </label>

                            <div class="col-md-5 input_insertstore">
                                <input type="file" required name="ulfMediaUrl" placeholder=""
                                       accept="image/*" alt="Product Image"
                                       class="form-control  input_insertstore">
                            </div>
                        </div>


                        <div class="col-md-12">
                            <input type="submit" value="Thêm" class="btn btn-primary btn-block input_insertstore">
                        </div>
                    </form>
                </div>
            </div>
        </center>
    </div>
</div>
<footer>
    <% include ./partial/footer %>
</footer>
</body>
</html>